@model HomeViewModel
<body class="single">
    <div class="container" id="body_margin">
        <div class="row mx-0">
            <div class="col-md-12 col-12 paddding animate-box" data-animate-effect="fadeIn">
                <div class="fh5co_suceefh5co_height">
                    <img src=@Model.SelectedMovie.Poster alt="img" />
                    <div class="fh5co_suceefh5co_height_position_absolute"></div>
                    <div class="TopMovieInfo">
                        <h2 class="TopRatedh2">@Model.SelectedMovie.Title</h2>
                        <p class="movie_plot">@Model.SelectedMovie.Plot</p>
                        <a>CMDb Betyg: </a>
                        <a style="font-size:35px;" class="icon-thumbs-up" accesskey="@Model.SelectedMovie.imdbId">@Model.SelectedMovie.numberOfLikes</a>
                        <a style="font-size:35px;" class="icon-thumbs-down" accesskey="@Model.SelectedMovie.imdbId">@Model.SelectedMovie.numberOfDislikes</a>
                        <br />
                        @for (int i = 0; i < Model.SelectedMovie.ratings.Count; i++)
                        {
                            <br />
                            @if (@Model.SelectedMovie.ratings[i].Source == "Internet Movie Database")
                            {<img src="~/images/imdb.png" />}
                            @if (@Model.SelectedMovie.ratings[i].Source == "Rotten Tomatoes")
                            {<img src="~/images/rottentomatoes.png" />}
                            @if (@Model.SelectedMovie.ratings[i].Source == "Metacritic")
                            {<img src="~/images/metacritic.png" />}
                            <a>@Model.SelectedMovie.ratings[i].Source:</a>
                            <a style="font-size:20px;">@Model.SelectedMovie.ratings[i].Value</a>
                            <br />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>