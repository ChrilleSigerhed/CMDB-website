@model HomeViewModel
<body class="single">
    <div id="fh5co-single" class="container-fluid pb-4 pt-4 paddding">
        
        <div class="container">
            <div class="col-md-12 animate-box" data-animate-effect="fadeInLeft">
                <div class="gtco-container" id="searchResultContaint">

                    @foreach (var movie in Model.MovieList)
                    {
                        string title = "";
                        @for (int i = 0; i < movie.Title.Length; i++)
                        {
                            if (movie.Title.Length > 40)
                            {
                                title = movie.Title.Remove(40) + "...";
                            }
                            else 
                            {
                                title = movie.Title;
                            }
                        }
                        <div class="col-md-4 animate-box" id="searchResultBoxes">
                            <img src="@movie.Poster" onerror="this.src='/images/imagenotfound.jpg'" />
                            <blockquote><b> @title (@movie.Year)</b></blockquote>
                            <p>@movie.numberOfLikes       @movie.numberOfDislikes</p>
                            <a asp-action="Index" asp-controller="About" asp-route-id="@movie.imdbId">
                                <button class="btn btn-primary btn-outline" type="submit">
                                    More
                                </button>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>